mas bed_allocation_agents {
	
  	agent assistant:assistant.asl{
		beliefs: url("https://explainable-agent.firebaseapp.com/page/optimised")
    }    
	agent optimiser:optimiser.asl{
    	focus: aloc
    }
  
	agent validator:validator.asl{
    	focus: pddl
    }

	agent operator:communication_specialist.asl{
    	focus: integration
    }

	agent database:database_specialist.asl{
    	focus: database, aloc
    }
    
	workspace wp{
        artifact aloc:br.pucrs.smart.FStoreArtifact
		artifact integration:br.pucrs.smart.IntegrationArtifact
		artifact database:br.pucrs.smart.DatabaseArtifact("src/resources/explainable-agent-d4391ab8fb68.json")
		artifact pddl:br.pucrs.smart.val.validatorArtifact()
	}
	
	platform: br.pucrs.smart.RestArtifact("--main 2181 --restPort 8080")
//	platform: jacamo.web.JCMWeb("--main 2181 --restPort 8080")

}